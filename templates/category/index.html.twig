{% extends 'base.html.twig' %}

{% block h1 %}Gestion des catégories ({{ categories|length}}){% endblock %}

{% block body %}

    <a class="btn btn-dark" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>

    <table class="table table-striped table-hover table-bordered text-center mt-3">

        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Quantité</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="w-25">{{ category.id }}</td>
                <td class="w-25">{{ category.titre }}</td>
                <td class="w-25">{{ category.products|length }}</td>
                <td class="w-25">

                    <a 
                        href="{{ path('app_category_show', {'id': category.id}) }}"
                        class="text-decoration-none"
                    >
                        {{ ux_icon('lucide:file', {'class':'text-warning sizeSvg20'}) }} 
                    </a>


                    <a 
                        href="{{ path('app_category_edit', {'id': category.id}) }}"
                        class="text-decoration-none"
                    >
                        {{ ux_icon('lucide:edit', {'class':'text-info sizeSvg20'}) }}
                    </a>

                    {{ include('category/_delete_form.html.twig') }}


                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-center text-danger" colspan="3">Aucun resultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}